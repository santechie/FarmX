<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">



    <TextView
        android:id="@+id/name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_marginTop="0dp"
        android:layout_marginStart="6dp"
        android:layout_marginEnd="6dp"
        app:layout_constraintTop_toTopOf="@id/image"
        app:layout_constraintStart_toEndOf="@id/image"
        app:layout_constraintEnd_toEndOf="parent"
        android:textSize="12sp"
        android:hint="Name"/>

    <ImageView
        android:id="@+id/image"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginStart="6dp"
        android:layout_marginTop="6dp"
        android:src="@drawable/temperature"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/value"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:maxLines="1"
        app:layout_constraintWidth_min="60dp"
        android:layout_marginTop="0dp"
        android:layout_marginStart="0dp"
        android:layout_marginEnd="5dp"
        app:layout_constraintStart_toStartOf="@id/name"
        app:layout_constraintTop_toBottomOf="@id/name"
        app:layout_constraintEnd_toStartOf="@id/valueImage"
        android:textColor="@color/green_farmx"
        android:hint="0"
        android:textSize="22sp"/>

    <TextView
        android:id="@+id/range"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:layout_marginStart="0dp"
        android:layout_marginBottom="6dp"
        app:layout_constraintStart_toStartOf="@id/value"
        app:layout_constraintTop_toBottomOf="@id/value"
        app:layout_constraintBottom_toBottomOf="parent"
        android:textSize="10sp"
        android:hint="0 - 0"/>

    <ImageView
        android:id="@+id/valueImage"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:padding="0dp"
        android:layout_marginEnd="0dp"
        app:layout_constraintTop_toTopOf="@id/value"
        app:layout_constraintBottom_toBottomOf="@id/value"
        app:layout_constraintEnd_toEndOf="@id/name"
        android:src="@drawable/high"/>

</androidx.constraintlayout.widget.ConstraintLayout>