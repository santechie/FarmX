<resources>

    <!-- Base application theme. -->
    <style name="AppTheme_crop" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/green_farmx</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/green_farmx</item>
        <item name="android:splitMotionEvents">false</item>
        <item name="android:windowEnableSplitTouch">false</item>
        <item name="fontFamily">@font/poppins_regular</item>
        <item name="android:includeFontPadding">false</item>

        <item name="materialCalendarStyle">@style/Widget.MaterialComponents.MaterialCalendar</item>
        <item name="materialCalendarFullscreenTheme">@style/ThemeOverlay.MaterialComponents.MaterialCalendar.Fullscreen</item>
        <item name="materialCalendarTheme">@style/ThemeOverlay.MaterialComponents.MaterialCalendar</item>
        <item name="alertDialogTheme">@style/AlertDialogTheme</item>
    </style>


    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/green_farmx</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/green_farmx</item>
        <item name="fontFamily">@font/poppins_regular</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:windowAnimationStyle">@style/CustomActivityAnimation</item>

        <item name="materialCalendarStyle">@style/Widget.MaterialComponents.MaterialCalendar</item>
        <item name="materialCalendarFullscreenTheme">@style/ThemeOverlay.MaterialComponents.MaterialCalendar.Fullscreen</item>
        <item name="materialCalendarTheme">@style/ThemeOverlay.MaterialComponents.MaterialCalendar</item>
        <item name="alertDialogTheme">@style/AlertDialogTheme</item>
    </style>

    <!-- style the AutoCompleteTextView of our material spinner -->


    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="fontFamily">@font/poppins_regular</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:windowAnimationStyle">@style/CustomActivityAnimation</item>

        <item name="materialCalendarStyle">@style/Widget.MaterialComponents.MaterialCalendar</item>
        <item name="materialCalendarFullscreenTheme">@style/ThemeOverlay.MaterialComponents.MaterialCalendar.Fullscreen</item>
        <item name="materialCalendarTheme">@style/ThemeOverlay.MaterialComponents.MaterialCalendar</item>
        <item name="alertDialogTheme">@style/AlertDialogTheme</item>

    </style>

    <style name="Theme.MyApp" parent="Theme.MaterialComponents.Light">
        <item name="colorPrimaryDark">@color/green_farmx</item>
        <item name="colorPrimary">@color/green_farmx</item>
        <item name="colorAccent">@color/green_farmx</item>
        <!--<item name="android:textColorPrimary">@android:color/white</item>-->
        <item name="android:windowAnimationStyle">@style/CustomActivityAnimation</item>
        <item name="alertDialogTheme">@style/AlertDialogTheme</item>
        <item name="fontFamily">@font/poppins_regular</item>
        <item name="android:includeFontPadding">false</item>
        <item name="actionBarTheme">@style/ThemeOverlay.Actionbar</item>
        <!--<item name="titleTextColor">@color/white</item>-->
