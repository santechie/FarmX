        <item name="android:titleTextStyle">@style/Theme.MyApp.ActionBar.TitleTextStyle</item>
    </style>

    <style name="Theme.MyApp.ActionBar.TitleTextStyle" parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Title">
