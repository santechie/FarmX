        <!--<item name="android:textColorSecondary">@android:color/white</item>
        <item name="actionMenuTextColor">@android:color/white</item>-->
    </style>

    <style name="Theme.MyApp.NoActionBar" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimaryDark">@color/green_farmx</item>
        <item name="colorPrimary">@color/green_farmx</item>
        <item name="colorAccent">@color/green_farmx</item>
        <!--<item name="android:textColorPrimary">@android:color/white</item>-->
        <item name="android:windowAnimationStyle">@style/CustomActivityAnimation</item>
        <!--<item name="android:textColorSecondary">@android:color/white</item>-->
        <!--<item name="actionMenuTextColor">@android:color/white</item>-->
        <item name="alertDialogTheme">@style/AlertDialogTheme</item>
        <item name="fontFamily">@font/poppins_regular</item>
        <item name="android:includeFontPadding">false</item>
        <item name="actionBarTheme">@style/ThemeOverlay.Actionbar</item>
        <!--<item name="titleTextColor">@color/white</item>-->
        <!-- <item name="android:textColor">@color/mat_black</item>-->
    </style>

    <style name="ThemeOverlay.Actionbar" parent="ThemeOverlay.MaterialComponents.ActionBar.Surface" >
        <item name="android:textColorPrimary">@color/white</item>
        <item name="colorControlNormal">@color/white</item>
    </style>

   <!-- <style name="ActionBarStyle" parent="Widget.MaterialComponents.ActionBar.Primary">
        <item name="android:titleTextStyle"></item>
    </style>-->

  <!--  <style name="ActionBarStyle.Title" parent="ActionBarStyle">
        <item name="android:textColor">@color/white</item>
    </style>-->

