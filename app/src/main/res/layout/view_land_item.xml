<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="8dp"
    android:layout_marginHorizontal="15dp"
    android:layout_marginBottom="15dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp">

        <TextView
            android:id="@+id/landName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="15dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@id/lieaner"
            android:maxLines="1"
            android:ellipsize="end"
            android:textColor="@color/green_farmx"
            android:textSize="16sp"/>

        <LinearLayout
            android:id="@+id/lieaner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="10dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/landName"
            android:orientation="horizontal">

        <ImageView
            android:id="@+id/addZones"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/ic_add_zone"
            app:layout_constraintTop_toTopOf="@id/landName"
            app:layout_constraintEnd_toStartOf="@id/zones"/>

        <ImageView
            android:id="@+id/zones"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginStart="10dp"
            android:src="@drawable/ic_zone_list"
            app:layout_constraintTop_toTopOf="@id/landName"
            app:layout_constraintEnd_toStartOf="@id/deviceData"/>

        <ImageView
            android:id="@+id/deviceData"
            android:layout_width="25dp"
            android:layout_height="30dp"
            android:layout_marginStart="10dp"
            android:src="@drawable/ic_my_devices"
            app:layout_constraintTop_toTopOf="@id/landName"
            app:layout_constraintEnd_toEndOf="parent"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginEnd="10dp"
            app:layout_constraintTop_toBottomOf="@id/lieaner"
            android:orientation="horizontal">

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/activity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/landName"
            android:layout_marginTop="15dp"
            app:tint="@null"
            app:iconTint="@color/white"
            android:src="@drawable/menu_land"
            app:backgroundTint="@color/white"
            app:fabSize="mini" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/finance_"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/activity"
            app:layout_constraintStart_toEndOf="@id/activity"
            android:layout_marginStart="6dp"
            android:layout_marginTop="15dp"
            android:padding="10dp"
            android:src="@drawable/stocks"
            app:tint="@null"
            app:iconTint="@color/white"
            app:backgroundTint="@color/white"
            app:fabSize="mini" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/pests"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/activity"
            app:layout_constraintStart_toEndOf="@id/finance_"
            android:layout_marginStart="6dp"
            android:src="@drawable/menu_pest"
            android:padding="10dp"
            app:tint="@null"
            app:iconTint="@color/white"
            android:layout_marginTop="15dp"
            app:backgroundTint="@color/white"
            app:fabSize="mini" />

<!--        <com.google.android.material.floatingactionbutton.FloatingActionButton-->
<!--            android:id="@+id/diseases"-->
<!--            android:layout_width="wrap_content"-->
<!--            android:layout_height="wrap_content"-->
<!--            app:layout_constraintTop_toTopOf="@id/activity"-->
<!--            app:layout_constraintStart_toEndOf="@id/pests"-->
<!--            android:layout_marginStart="6dp"-->
<!--            android:layout_marginTop="15dp"-->
<!--            android:src="@drawable/disese_n"-->
<!--            app:backgroundTint="@color/white"-->
<!--            app:fabSize="mini" />-->

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/income"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/activity"
            app:layout_constraintStart_toEndOf="@id/diseases"
            android:layout_marginStart="6dp"
            app:srcCompat="@drawable/menu_finance"
            app:backgroundTint="@color/white"
            app:tint="@null"
            app:iconTint="@color/white"
            android:padding="10dp"
            android:layout_marginTop="15dp"
            app:fabSize="mini" />
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>