<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:background="@color/white"
    android:elevation="5dp"
    android:outlineAmbientShadowColor="@color/app_colour_green"
    android:outlineSpotShadowColor="@color/app_colour_green"
    android:padding="5dp"
    android:weightSum="1"
    app:cardCornerRadius="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/overlay_light_90"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:gravity="center|start"
            android:minHeight="60dp"
            android:orientation="horizontal"
            android:padding="2dp">

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".14"

                android:gravity="center|start">
                <de.hdodenhof.circleimageview.CircleImageView

                    android:layout_width="33dp"
                    android:layout_height="33dp"

                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:src="#ffffff" />

                <ImageView
                    android:id="@+id/icon"
                    android:layout_width="23dp"
                    android:layout_height="23dp"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true" />

            </RelativeLayout>

            <LinearLayout
                android:layout_width="0dp"

                android:layout_height="wrap_content"
                android:layout_weight=".86"
                android:gravity="center|start">

                <TextView
                    android:id="@+id/disc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_regular"
                    android:lineSpacingExtra="1dp"
                    android:textColor="@color/application_letters"
                    android:textSize="@dimen/_14sdp" />

            </LinearLayout>
        </LinearLayout>


        <ImageView
            android:id="@+id/gallery"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:layout_gravity="end"
            android:layout_marginTop="-5dp"
            android:layout_marginEnd="15sp"
            android:layout_marginRight="15sp"
            android:layout_marginBottom="2dp"
            android:src="@drawable/gallery_image" />

    </LinearLayout>

</androidx.cardview.widget.CardView>