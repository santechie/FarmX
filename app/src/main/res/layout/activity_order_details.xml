<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".e_market.activities.OrderDetailsActivity">

    <TextView
        android:id="@+id/orderId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textColor="@color/green_farmx"
        android:fontFamily="@font/poppins_semibold"
        android:textSize="20sp"
        android:text="#1234"/>

    <TextView
        android:id="@+id/date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="15dp"
        app:layout_constraintTop_toTopOf="@id/orderId"
        app:layout_constraintBottom_toBottomOf="@id/orderId"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="dd/MM/yyyy"/>

    <com.google.android.material.chip.Chip
        android:id="@+id/status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        app:layout_constraintEnd_toEndOf="@id/date"
        app:layout_constraintTop_toBottomOf="@id/orderId"
        android:text="Status"/>

    <TextView
        android:id="@+id/itemsCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="@id/orderId"
        app:layout_constraintTop_toBottomOf="@id/orderId"
        android:text="20 Items"
        android:fontFamily="@font/poppins_semibold"
        android:textSize="20sp"/>

    <TextView
        android:id="@+id/totalQuantity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/orderId"
        app:layout_constraintTop_toBottomOf="@id/itemsCount"
        android:text="20000 KG"
        android:fontFamily="@font/poppins_semibold"
        android:textSize="20sp"/>

    <TextView
        android:id="@+id/totalPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/orderId"
        app:layout_constraintTop_toBottomOf="@id/totalQuantity"
        android:text="Rs. 150000"
        android:fontFamily="@font/poppins_semibold"
        android:textSize="20sp"/>

    <TextView
        android:id="@+id/itemsHead"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="@id/orderId"
        app:layout_constraintTop_toBottomOf="@id/totalPrice"
        android:text="Items"
        android:textSize="18sp"/>

    <View
        android:id="@+id/div1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="5dp"
        android:layout_marginHorizontal="15sp"
        app:layout_constraintStart_toStartOf="@id/orderId"
        app:layout_constraintEnd_toEndOf="@id/date"
        app:layout_constraintTop_toBottomOf="@id/itemsHead"
        android:background="@color/grey_10"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="5dp"
        android:layout_marginHorizontal="15sp"
        app:layout_constraintTop_toBottomOf="@id/div1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        tools:listitem="@layout/view_order_details_item_item"
        tools:itemCount="10"/>

</androidx.constraintlayout.widget.ConstraintLayout>