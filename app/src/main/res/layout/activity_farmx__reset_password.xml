<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:weightSum="10"
    tools:context=".login_activities.Formx_Login_Activity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2.5"
        android:gravity="center|bottom">

        <ImageView
            android:layout_width="175dp"
            android:layout_height="100dp"
            android:background="@drawable/farmx_logo" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="15dp"
            app:cardBackgroundColor="#5dae09"
            app:cardCornerRadius="15dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical"
                android:weightSum="5">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginBottom="10dp"
                    android:layout_weight=".9"
                    android:background="@drawable/edittext_curved"
                    android:gravity="center"
                    android:visibility="gone">


                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_marginStart="25dp"
                        android:layout_marginLeft="5dp"
                        android:background="@drawable/user"
                        app:tint="@color/app_colour_green" />

                    <EditText
                        android:id="@+id/password"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@null"
                        android:backgroundTint="@color/colorPrimary"
                        android:fontFamily="@font/poppins_regular"
                        android:gravity="center|start"
                        android:hint="UserName"
                        android:inputType="textPassword"
                        android:paddingStart="10dp"
                        android:paddingLeft="10dp"
                        android:textColor="@color/app_colour_green"
                        android:textColorHint="@color/app_colour_green"
                        android:textSize="@dimen/_14sdp" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginBottom="10dp"

                    android:layout_weight=".9"
                    android:background="@drawable/edittext_curved"
                    android:gravity="center">


                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginStart="25dp"
                        android:layout_marginLeft="5dp"

                        android:background="@drawable/password" />

                    <EditText
                        android:id="@+id/password"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@null"
                        android:backgroundTint="@color/colorPrimary"
                        android:fontFamily="@font/poppins_regular"
                        android:gravity="center|start"
                        android:hint="New Password"
                        android:inputType="textPassword"
                        android:paddingStart="10dp"
                        android:paddingLeft="10dp"
                        android:textColor="@color/app_colour_green"
                        android:textColorHint="@color/app_colour_green"
                        android:textSize="@dimen/_14sdp" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginBottom="10dp"

                    android:layout_weight=".9"
                    android:background="@drawable/edittext_curved"
                    android:gravity="center">


                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginStart="25dp"
                        android:layout_marginLeft="5dp"

                        android:background="@drawable/password" />

                    <EditText
                        android:id="@+id/password"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@null"
                        android:backgroundTint="@color/colorPrimary"
                        android:fontFamily="@font/poppins_regular"
                        android:gravity="center|start"
                        android:hint="Confirm New Password"
                        android:inputType="textPassword"
                        android:paddingStart="10dp"
                        android:paddingLeft="10dp"
                        android:textColor="@color/app_colour_green"
                        android:textColorHint="@color/app_colour_green"
                        android:textSize="@dimen/_14sdp" />


                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginTop="5dp"
                    android:layout_weight=".9"
                    android:gravity="center">

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="35dp"

                        android:background="@drawable/white_curvedbutton"
                        android:gravity="center"
                        android:paddingStart="15dp"
                        android:paddingEnd="15dp"
                        android:text="Submit"
                        android:textAllCaps="false"
                        android:textColor="@color/green_farmx"
                        android:textSize="16sp" />

                </LinearLayout>


            </LinearLayout>


        </androidx.cardview.widget.CardView>

    </LinearLayout>


</LinearLayout>