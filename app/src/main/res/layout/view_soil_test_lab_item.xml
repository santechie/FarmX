<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/white_curvedbutton"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginHorizontal="5dp"
    android:layout_marginVertical="2.5dp"
    android:padding="0dp">

    <RadioButton
        android:id="@+id/check"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginHorizontal="6dp"
        android:clickable="false"
        android:textColor="@color/mat_black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textSize="16sp"
        android:backgroundTint="@color/green_farmx"/>

    <TextView
        android:id="@+id/labName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toTopOf="@id/check"
        app:layout_constraintEnd_toStartOf="@id/distance"
        app:layout_constraintStart_toEndOf="@id/check"/>


    <TextView
        android:id="@+id/distance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawablePadding="5dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/labName"
        app:layout_constraintBottom_toBottomOf="@id/labName"
        android:drawableStart="@drawable/ic_location"
        android:drawableTint="@color/green_farmx"
        android:text="0 KM"/>

    <TextView
        android:id="@+id/address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="12dp"
        android:layout_marginHorizontal="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/labName"
        app:layout_constraintBottom_toBottomOf="parent"
        android:textColor="@color/grey_40"
        android:text="Address Line 1 \nAddress Line 2\nAddress Line 3"/>

</androidx.constraintlayout.widget.ConstraintLayout>