<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".buysell.Detailed_Product"
    android:fillViewport="true">

        <LinearLayout
            android:id="@+id/action_bar"
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            android:background="@drawable/onesidecorner"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:gravity="center">

                <ImageView
                    android:id="@+id/goback"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/previous"
                    android:backgroundTint="@color/green_farmx" />

            </LinearLayout>

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="6"
                android:gravity="center"
                android:text="@string/product_detail"
                android:textColor="@color/green_farmx"
                android:textSize="18sp"
                android:fontFamily="@font/poppins_semibold">

            </TextView>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:gravity="center">

                <ImageView
                    android:layout_width="30dp"
                    android:id="@+id/add_land"
                    android:visibility="gone"
                    android:backgroundTint="@color/green_farmx"
                    android:background="@drawable/add_button"
                    android:layout_height="30dp" />

            </LinearLayout>

        </LinearLayout>

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/action_bar"
            android:adjustViewBounds="false"
            android:scaleType="fitCenter"/>

    <TextView
        android:id="@+id/product_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:maxLines="2"
        android:minLines="2"
        android:hint="@string/name"
        android:textAlignment="viewStart"
        android:textColor="@color/green_farmx"
        android:textSize="20sp"
        android:fontFamily="@font/poppins_semibold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/imageView"
        app:layout_constraintStart_toEndOf="@id/imageView"/>

    <TextView
        android:id="@+id/price"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Rs. 0"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@id/product_title"
        app:layout_constraintEnd_toEndOf="@id/product_title"
        app:layout_constraintTop_toBottomOf="@id/product_title"/>

        <LinearLayout
            android:id="@+id/titleLay"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="@id/product_title"
            app:layout_constraintEnd_toEndOf="@id/product_title"
            app:layout_constraintTop_toBottomOf="@id/price"
            android:layout_margin="0dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:minHeight="50dp"
            android:weightSum="1">



           <!-- <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1"/>-->

            <LinearLayout
                android:id="@+id/addquantity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="visible"
                android:layout_margin="0dp"
                android:gravity="center_vertical"
                android:layoutDirection="ltr"
                android:orientation="horizontal">


                <ImageView
                    android:id="@+id/cart_item_quantity_minusBtn"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/minus"
                    android:gravity="center"
                    android:textColor="@color/colorPrimary" />

                <TextView
                    android:id="@+id/cart_item_quantity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minWidth="40dp"
                    android:gravity="center"
                    android:textColor="@color/green_farmx"
                    android:textSize="15sp" />

                <ImageView
                    android:id="@+id/cart_item_quantity_plusBtn"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/plus"
                    android:gravity="center"
                    android:textColor="@color/colorPrimary" />

            </LinearLayout>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/addButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/green_rounded_button"
                app:backgroundTint="@color/green_farmx"
                android:text="Add"
                android:textAllCaps="false"
                android:paddingVertical="5dp"
                android:minHeight="0dp"
                android:textColor="@color/white"
                android:fontFamily="@font/poppins_semibold"
                android:textSize="14sp"
                android:visibility="gone"/>

        </LinearLayout>

        <TextView

            android:id="@+id/details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/titleLay"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="20dp"
            android:text="@string/details"
            android:textColor="@color/mat_black"
            android:textAlignment="viewStart"
            android:textSize="18sp" />

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="20dp"
        app:layout_constraintStart_toStartOf="@id/details"
        app:layout_constraintEnd_toEndOf="@id/details"
        app:layout_constraintTop_toBottomOf="@id/details"
        app:layout_constraintBottom_toTopOf="@id/cart">

        <TextView
            android:id="@+id/product_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="textStart"
            android:textSize="15sp"
            android:text="\n\n\n\n\n\n\n\n\n\n\n\n\n\n\n\n\n\n\n\n\n\n\n\n\n\n\n\n\n\n\n"/>

    </ScrollView>

<!--        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/cart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_margin="20dp"
            android:src="@drawable/cart"
            app:backgroundTint="@color/green_farmx"/>-->

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/cart"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="0dp"
            android:layout_marginBottom="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="10dp"
            android:includeFontPadding="false"
            android:text="@string/cart"
            android:textAllCaps="false"
            android:textColor="@color/green_farmx"
            android:fontFamily="@font/poppins_semibold"
            android:textSize="16sp"
            android:drawableStart="@drawable/ic_cart"
            android:paddingStart="15dp"
            android:paddingEnd="30dp"
            app:drawableTint="@color/green_farmx"
            android:background="@drawable/farmxgreen_outline"
            app:layout_constraintEnd_toStartOf="@id/checkOut"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/checkOut"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="20dp"
            android:layout_marginHorizontal="0dp"
            android:layout_marginBottom="20dp"
            android:includeFontPadding="false"
            android:text="@string/checkout"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:drawableStart="@drawable/ic_check_white_24dp"
            android:paddingStart="10dp"
            android:paddingEnd="30dp"
            android:fontFamily="@font/poppins_semibold"
            android:textSize="16sp"
            android:background="@drawable/farmxgreen_button"
            app:layout_constraintStart_toEndOf="@id/cart"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>