<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="15sp"
    android:background="@drawable/dialog_bg"
    android:nestedScrollingEnabled="false">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="15sp"
                android:layout_marginTop="15sp"
                android:layout_marginEnd="15sp"
                android:layout_marginBottom="15sp"

                android:gravity="center"
                android:text="check this place"
                android:textColor="@color/green_farmx"
                android:textSize="@dimen/title"
                android:fontFamily="@font/poppins_semibold" />

            <ImageView
                android:id="@+id/close"
                android:layout_width="27dp"
                android:layout_height="27dp"
                android:layout_marginEnd="15dp"
                android:layout_alignTop="@id/title"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:src="@drawable/ic_close_black_24dp"
                app:tint="@color/orange" />


        </RelativeLayout>


        <TextView
            android:id="@+id/issueTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="20dp"
            android:text="@string/select_issue"
            android:textColor="@color/green_farmx"
            android:textSize="16sp"
            android:fontFamily="@font/poppins_semibold" />

        <RelativeLayout
            android:id="@+id/issueSpinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp">

            <Spinner
                android:id="@+id/issue"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="10dp"

                android:layout_marginBottom="10dp"
                android:background="@drawable/custom_edittextback_blue"
                android:fontFamily="@font/poppins_semibold"
                android:imeOptions="actionNext"
                android:inputType="text"
                android:paddingStart="2dp"
                android:paddingEnd="10dp"
                android:textColor="@color/green_farmx"
                android:textColorHint="@color/green_farmx"
                android:textSize="12sp" />


            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="20dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/ic_baseline_arrow_drop_down_24" />
        </RelativeLayout>

        <EditText
            android:id="@+id/activity_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:layout_marginHorizontal="20dp"
            android:hint="@string/activity_type"
            android:imeOptions="actionNext"
            android:inputType="text"
            android:maxLines="1"
            android:textSize="15sp"
            app:backgroundTint="@color/green_farmx" />


        <EditText
            android:id="@+id/pest_used"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginHorizontal="20dp"
            android:hint="@string/pest_urae_fertilizer_used"
            android:imeOptions="actionNext"
            android:inputType="text"
            android:maxLines="1"
            android:textSize="15sp"
            app:backgroundTint="@color/green_farmx" />


        <EditText
            android:id="@+id/quantity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginHorizontal="20dp"
            android:hint="@string/quantity"
            android:imeOptions="actionDone"
            android:maxLines="1"
            android:textSize="15sp"
            app:backgroundTint="@color/green_farmx" />

        <EditText
            android:id="@+id/cost"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginHorizontal="20dp"
            android:hint="@string/cost"
            android:imeOptions="actionDone"
            android:inputType="number"
            android:maxLines="1"
            android:maxLength="6"
            android:textSize="15sp"
            app:backgroundTint="@color/green_farmx" />

        <EditText
            android:id="@+id/date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginHorizontal="20dp"
            android:hint="@string/date_of_action"
            android:focusable="false"
            android:inputType="date"
            android:maxLines="1"
            android:textSize="15sp"
            app:backgroundTint="@color/green_farmx" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ProgressBar
                android:id="@+id/progressBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:layout_centerInParent="true"
                android:progressTint="@color/green_farmx"/>

            <Button
                android:id="@+id/register"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="25dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="25dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/farmxgreen_button"
                android:text="@string/Submit"
                android:textColor="@color/white" />

        </RelativeLayout>

    </LinearLayout>


</LinearLayout>