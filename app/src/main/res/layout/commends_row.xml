<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="15dp"
    android:layout_marginTop="7.5dp"
    android:layout_marginEnd="15dp"
    android:layout_marginBottom="7.5sp"
    app:cardCornerRadius="7dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/outline"
        android:padding="3dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="6dp"
            android:layout_marginTop="6dp"
            android:layout_marginEnd="6dp"
            android:weightSum="9">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/crop_icon"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/user" />

            </LinearLayout>

            <TextView
                android:id="@+id/user_name"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginStart="5dp"
                android:layout_weight="4"
                android:ellipsize="end"
                android:gravity="center|start"
                android:maxLines="1"
                android:text="Tomato">

            </TextView>


            <TextView
                android:id="@+id/created_at"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="5dp"
                android:layout_weight="4"
                android:ellipsize="end"
                android:gravity="center|end"
                android:maxLines="1"

                >

            </TextView>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="6dp"
            android:weightSum="9">


            <io.github.rockerhieu.emojicon.EmojiconTextView
                android:id="@+id/commmends"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginVertical="5dp"
android:layout_marginHorizontal="15dp"
                android:ellipsize="end"
                android:textSize="14sp"
                android:gravity="center|start"
                android:text="Tomato"
                android:textColor="@color/black">

            </io.github.rockerhieu.emojicon.EmojiconTextView>


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="6dp"
            android:layout_marginBottom="6dp"
            android:gravity="end">


            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:id="@+id/report"
                android:background="@drawable/ic_baseline_report_24"
                android:backgroundTint="@color/grey_40" />

            <ImageView
                android:layout_width="30dp"
                android:id="@+id/delete"
                android:layout_height="30dp"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:background="@drawable/ic_baseline_delete_sweep_24"
                android:backgroundTint="@color/orange_delete" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>