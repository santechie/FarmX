<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="2dp"
    android:layout_weight="4"
    android:background="@drawable/backeditttext"
    android:gravity="center"
    android:orientation="horizontal">


    <TextView
        android:id="@+id/name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="3dp"
        android:layout_weight="1"

        android:gravity="center"
        android:hint="@string/select"
        android:maxLines="1"
        android:textColor="@color/black" />

    <View
        android:layout_width=".5dp"
        android:layout_height="match_parent"
        android:background="@color/mailheader" />

    <TextView
        android:id="@+id/costperday"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="3dp"
        android:layout_weight="1"

        android:gravity="center"
        android:textColor="@color/black" />

    <View
        android:layout_width=".5dp"
        android:layout_height="match_parent"
        android:background="@color/mailheader" />

    <TextView
        android:id="@+id/hours"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="3dp"
        android:layout_weight="1"


        android:gravity="center"
        android:inputType="number"

        android:textColor="@color/black" />

    <View
        android:layout_width=".5dp"
        android:layout_height="match_parent"
        android:background="@color/mailheader" />


    <RelativeLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/total_amount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_marginStart="3dp"
            android:layout_marginTop="3dp"
            android:layout_marginEnd="3dp"
            android:layout_marginBottom="3dp"

            android:gravity="center"
            android:text="@string/select"
            android:textColor="@color/black" />

    </RelativeLayout>

    <ImageView
        android:layout_width="20dp"
        android:id="@+id/delete_row"
        android:layout_marginEnd="5dp"
        android:backgroundTint="@color/orange_delete"
        android:background="@drawable/ic_baseline_delete_sweep_24"
        android:layout_height="20dp"/>

</LinearLayout>