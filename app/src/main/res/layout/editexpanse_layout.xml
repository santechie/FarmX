<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView android:id="@+id/addmember_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_margin="10dp"
        android:layout_height="wrap_content">




        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15sp"
            android:layout_marginBottom="15sp"

            android:gravity="center"
            android:text="@string/updateexpenses"
            android:textColor="@color/headlines_colour"
            android:textSize="@dimen/headeline"

            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_marginBottom="10dp"

            android:text="@string/expense_title"
            android:textColor="@color/subheadlines_colour"
            android:textSize="@dimen/title"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/payment_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/backeditttext"

            android:gravity="center|start"
            android:imeOptions="actionDone"
            android:inputType="text"
            android:hint="@string/expense_title"
            android:minHeight="35dp"
            android:padding="5dp"
            android:paddingStart="10dp"
            android:textColor="@color/application_letters"
            android:textSize="@dimen/disc" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="20dp"

            android:text="@string/expense_type"
            android:textColor="@color/subheadlines_colour"

            android:textSize="@dimen/title"
            android:textStyle="bold" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Spinner
                android:id="@+id/payment_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:spinnerMode="dropdown"
                android:background="@drawable/backeditttext"
                android:imeOptions="actionNext"
                android:inputType="text"
                android:minHeight="35dp"
                android:textColor="@color/logineditcolour"
                android:textColorHint="@color/logineditcolour"
                android:textSize="12sp"
                android:textStyle="bold" />


            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/ic_keyboard_arrow_down_black_24dp" />
        </RelativeLayout>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp"

            android:text="@string/payment_date"
            android:textColor="@color/subheadlines_colour"
            android:textSize="@dimen/title"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/payment_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/backeditttext"
            android:focusable="false"

            android:gravity="center|start"
            android:imeOptions="actionNext"
            android:inputType="text"
            android:hint="@string/selectdate"
            android:minHeight="35dp"
            android:padding="5dp"
            android:paddingStart="10dp"
            android:textColor="@color/application_letters"
            android:textSize="@dimen/disc" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp"

            android:text="@string/total_amount"
            android:textColor="@color/subheadlines_colour"
            android:textSize="@dimen/title"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/total_amount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/backeditttext"

            android:gravity="center|start"
            android:imeOptions="actionNext"
            android:inputType="number"
            android:maxLength="8"
            android:minHeight="35dp"
            android:padding="5dp"
            android:hint="@string/total_amount"
            android:paddingStart="10dp"
            android:textColor="@color/application_letters"
            android:textSize="@dimen/disc" />



         <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp"

            android:text="@string/nextpayment_date"
            android:textColor="@color/subheadlines_colour"
            android:textSize="@dimen/title"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/nextpayment_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/backeditttext"
            android:focusable="false"

            android:gravity="center|start"
            android:imeOptions="actionNext"
            android:inputType="text"
            android:minHeight="35dp"
            android:padding="5dp"

            android:hint="@string/selectdate"
            android:paddingStart="10dp"
            android:textColor="@color/application_letters"
            android:textSize="@dimen/disc" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:gravity="center"
            android:orientation="vertical">


            <com.skydoves.elasticviews.ElasticButton
                android:id="@+id/addpayment"
                android:layout_width="200dp"
                android:layout_height="35dp"
                android:layout_margin="20dp"
                android:background="@color/app_colour_green"
                android:gravity="center"
                android:text="@string/update"
                android:textColor="@color/white"
                app:button_cornerRadius="5dp"
                app:button_duration="250"
                app:button_scale="0.87" />


        </LinearLayout>

    </LinearLayout>
</androidx.core.widget.NestedScrollView>