<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginHorizontal="10dp"
    android:layout_marginVertical="5dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp">

        <ImageView
            android:id="@+id/activityImage"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_marginTop="3dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:tint="@color/green_farmx" />

        <TextView
            android:id="@+id/activityName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:layout_marginStart="10dp"
            app:layout_constraintStart_toEndOf="@id/activityImage"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@id/completedSt"
            android:textColor="@color/green_farmx"
            android:hint="Activity Name"/>

        <TextView
            android:id="@+id/activityType"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="10sp"
            android:layout_marginTop="0dp"
            app:layout_constraintStart_toStartOf="@id/activityName"
            app:layout_constraintEnd_toEndOf="@id/activityName"
            app:layout_constraintTop_toBottomOf="@id/activityName"
            android:hint="Activity Type"/>

        <ImageView
            android:id="@+id/dateIcon"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:visibility="visible"
            android:layout_marginTop="5dp"
            app:layout_constraintStart_toStartOf="@id/activityName"
            app:layout_constraintTop_toBottomOf="@id/activityType"
            android:src="@drawable/ic_calender"
            app:tint="#808080" />

        <TextView
            android:id="@+id/dateTv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:visibility="visible"
            android:layout_marginStart="5dp"
            app:layout_constraintStart_toEndOf="@id/dateIcon"
            app:layout_constraintEnd_toEndOf="@id/activityName"
            app:layout_constraintTop_toTopOf="@id/dateIcon"
            app:layout_constraintBottom_toBottomOf="@id/dateIcon"
            android:hint="Date"/>

        <TextView
            android:id="@+id/completedTv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:layout_marginTop="5dp"
            app:layout_constraintStart_toStartOf="@id/activityName"
            app:layout_constraintEnd_toStartOf="@id/completedSt"
            app:layout_constraintTop_toTopOf="@id/completedSt"
            app:layout_constraintBottom_toBottomOf="@id/completedSt"
            android:text="Completed"/>

        <Switch
            android:id="@+id/completedSt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            app:layout_constraintTop_toTopOf="@id/activityName"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/activityName"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>