<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingHorizontal="20dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/cropType"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:ellipsize="end"
        android:text=""
        app:layout_constraintTop_toBottomOf="@id/cropName"
        app:layout_constraintStart_toStartOf="@id/cropName"
        app:layout_constraintEnd_toEndOf="@id/cropName"/>

    <TextView
        android:id="@+id/cropName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="15dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/acreCount"
        android:maxLines="1"
        android:textSize="18sp"
        android:ellipsize="end"
        android:textColor="@color/green_farmx"/>

    <TextView
        android:id="@+id/acreCount"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        app:layout_constraintWidth_percent="0.2"
        app:layout_constraintTop_toTopOf="@id/cropName"
        app:layout_constraintBottom_toBottomOf="@id/cropName"
        app:layout_constraintStart_toEndOf="@id/cropName"
        app:layout_constraintEnd_toStartOf="@id/zoneCount"
        android:textSize="16sp"
        android:text="0"/>

    <TextView
        android:id="@+id/zoneCount"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        app:layout_constraintWidth_percent="0.2"
        app:layout_constraintTop_toTopOf="@id/cropName"
        app:layout_constraintBottom_toBottomOf="@id/cropName"
        app:layout_constraintStart_toEndOf="@id/acreCount"
        app:layout_constraintEnd_toEndOf="parent"
        android:textSize="16sp"
        android:text="0"/>

    <TextView
        android:id="@+id/acresTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/acreCount"
        app:layout_constraintEnd_toEndOf="@id/acreCount"
        app:layout_constraintTop_toTopOf="@id/cropType"
        app:layout_constraintBottom_toBottomOf="@id/cropType"
        android:textColor="@color/green_farmx"
        android:text="@string/acres"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/zoneCount"
        app:layout_constraintEnd_toEndOf="@id/zoneCount"
        app:layout_constraintTop_toTopOf="@id/cropType"
        app:layout_constraintBottom_toBottomOf="@id/cropType"
        android:textColor="@color/green_farmx"
        android:text="@string/zones"/>

    <ImageView
        android:id="@+id/cropImage"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/cropType"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="15dp"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="0dp"
        android:layout_height="170dp"
        android:layout_marginStart="0dp"
        app:layout_constraintStart_toEndOf="@id/cropImage"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/cropImage"/>

    <View
        android:id="@+id/border"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/recyclerView"
        android:background="#808080"/>

    <ImageView
        android:id="@+id/harvestImage"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginTop="15dp"
        android:src="@drawable/ic_harvest"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/harvestTitle"
        app:layout_constraintTop_toBottomOf="@id/border"
        app:layout_constraintHorizontal_chainStyle="spread_inside"/>

    <TextView
        android:id="@+id/harvestTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="1"
        app:layout_constraintWidth_percent="0.35"
        app:layout_constraintStart_toEndOf="@id/harvestImage"
        app:layout_constraintTop_toTopOf="@id/harvestImage"
        app:layout_constraintEnd_toStartOf="@id/yieldImage"
        android:text="@string/harvest_date"
        android:textColor="@color/green_farmx"
        android:textSize="16sp"/>

    <TextView
        android:id="@+id/harvest"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="1"
        android:text=""
        app:layout_constraintStart_toStartOf="@id/harvestTitle"
        app:layout_constraintEnd_toEndOf="@id/harvestTitle"
        app:layout_constraintTop_toBottomOf="@id/harvestTitle"
        app:layout_constraintBottom_toBottomOf="@id/harvestImage"/>

    <ImageView
        android:id="@+id/yieldImage"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:padding="2dp"
        android:layout_marginTop="15dp"
        android:src="@drawable/ic_expected_yield"
        app:layout_constraintStart_toEndOf="@id/harvestTitle"
        app:layout_constraintEnd_toStartOf="@id/yieldTitle"
        app:layout_constraintTop_toBottomOf="@id/border"/>

    <TextView
        android:id="@+id/yieldTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:ellipsize="end"
        app:layout_constraintWidth_percent="0.35"
        app:layout_constraintStart_toEndOf="@id/yieldImage"
        app:layout_constraintTop_toTopOf="@id/harvestImage"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="@string/expected_yield"
        android:textColor="@color/green_farmx"
        android:textSize="16sp"/>

    <TextView
        android:id="@+id/yield"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:ellipsize="end"
        android:text=""
        app:layout_constraintStart_toStartOf="@id/yieldTitle"
        app:layout_constraintEnd_toEndOf="@id/yieldTitle"
        app:layout_constraintTop_toBottomOf="@id/yieldTitle"
        app:layout_constraintBottom_toBottomOf="@id/yieldImage"/>

</androidx.constraintlayout.widget.ConstraintLayout>