        <androidx.cardview.widget.CardView
            android:id="@+id/landCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="15dp"
            android:layout_marginTop="15dp"
            app:cardElevation="2dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/landIcon"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="15dp"
                    android:padding="2dp"
                    android:src="@drawable/activity_icon"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:tint="@color/green_farmx" />

                <TextView
                    android:id="@+id/landName"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="15dp"
                    android:layout_marginTop="0dp"
                    android:hint="Land Name"
                    android:textSize="16sp"
                    app:layout_constraintBottom_toBottomOf="@id/landIcon"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/landIcon"
                    app:layout_constraintTop_toTopOf="@id/landIcon" />

                <ImageView
                    android:id="@+id/locationIcon"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/ic_location"
                    app:layout_constraintStart_toStartOf="@id/landIcon"
                    app:layout_constraintTop_toBottomOf="@id/landIcon"
                    app:tint="@color/green_farmx" />

                <TextView
                    android:id="@+id/landLocation"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="15dp"
                    android:layout_marginTop="0dp"
                    android:hint="Location"
                    android:textSize="16sp"
                    app:layout_constraintBottom_toBottomOf="@id/locationIcon"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/locationIcon"
                    app:layout_constraintTop_toTopOf="@id/locationIcon" />

                <ImageView
                    android:id="@+id/acreIcon"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="15dp"
                    android:padding="2dp"
                    android:src="@drawable/land"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="@id/landIcon"
                    app:layout_constraintTop_toBottomOf="@id/locationIcon"
                    app:tint="@color/green_farmx" />

                <TextView
                    android:id="@+id/acreCount"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="15dp"
                    android:layout_marginTop="0dp"
                    android:hint="Acre Count"
                    android:textSize="16sp"
                    app:layout_constraintBottom_toBottomOf="@id/acreIcon"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/acreIcon"
                    app:layout_constraintTop_toTopOf="@id/acreIcon" />

            </androidx.constraintlayout.widget.ConstraintLayout>


        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/climateCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="15dp"
            android:layout_marginTop="15dp"
            app:cardElevation="2dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/landCard">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:id="@+id/tempLay"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="15dp"
                    app:layout_constraintEnd_toStartOf="@id/humidityLay"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <ImageView
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:src="@drawable/ic_temperature" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/temperature"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="10dp"
                            android:text="85"
                            android:textColor="@color/mat_black"
                            android:textSize="18sp" />

                        <TextView
                            android:id="@+id/temperatureTitle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="10dp"
                            android:text="Temperature"
                            android:textColor="#808080"
                            android:textSize="12sp" />

                    </LinearLayout>

                </androidx.appcompat.widget.LinearLayoutCompat>

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:id="@+id/humidityLay"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:padding="15dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/tempLay"
                    app:layout_constraintTop_toTopOf="parent">

                    <ImageView
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:src="@drawable/ic_humidity" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/humidity"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="10dp"
                            android:text="85"
                            android:textColor="@color/mat_black"
                            android:textSize="18sp" />

                        <TextView
                            android:id="@+id/humidityTitle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="10dp"
                            android:text="Humidity"
                            android:textColor="#808080"
                            android:textSize="12sp" />

                    </LinearLayout>

                </androidx.appcompat.widget.LinearLayoutCompat>

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:id="@+id/moistureLay"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:padding="15dp"
                    app:layout_constraintEnd_toStartOf="@id/phLayLay"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tempLay">

                    <ImageView
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:src="@drawable/ic_moisture" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/moisture"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="10dp"
                            android:text="85"
                            android:textColor="@color/mat_black"
                            android:textSize="18sp" />

                        <TextView
                            android:id="@+id/moistureTitle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="10dp"
                            android:text="Moisture"
                            android:textColor="#808080"
                            android:textSize="12sp" />

                    </LinearLayout>

                </androidx.appcompat.widget.LinearLayoutCompat>

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:id="@+id/phLayLay"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:padding="15dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/tempLay"
                    app:layout_constraintTop_toBottomOf="@id/humidityLay">

                    <ImageView
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:src="@drawable/ic_ph" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/ph"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="10dp"
                            android:text="85"
                            android:textColor="@color/mat_black"
                            android:textSize="18sp" />

                        <TextView
                            android:id="@+id/phTitle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="10dp"
                            android:text="pH"
                            android:textColor="#808080"
                            android:textSize="12sp" />

                    </LinearLayout>

                </androidx.appcompat.widget.LinearLayoutCompat>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>

        <ImageView
            android:id="@+id/supervisorIcon"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginTop="15dp"
            android:src="@drawable/profile"
            app:layout_constraintStart_toStartOf="@id/climateCard"
            app:layout_constraintTop_toBottomOf="@id/climateCard" />

        <TextView
            android:id="@+id/supervisorHead"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:text="Supervisor"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="@id/supervisorIcon"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/supervisorIcon"
            app:layout_constraintTop_toTopOf="@id/supervisorIcon" />

        <androidx.cardview.widget.CardView
            android:id="@+id/supervisorCard"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            app:layout_constraintEnd_toEndOf="@id/climateCard"
            app:layout_constraintStart_toStartOf="@id/climateCard"
            app:layout_constraintTop_toBottomOf="@id/supervisorIcon">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="15dp">

                <TextView
                    android:id="@+id/supervisorName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Abc"
                    android:textColor="@color/mat_black"
                    android:textSize="16sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/supervisorNumber"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:text="9876543210"
                    android:textSize="12sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/supervisorName" />

                <ImageView
                    android:id="@+id/callIcon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/ic_call"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/supervisorNumber"
                    app:tint="@color/green_farmx" />

                <ImageView
                    android:id="@+id/whatsappIcon"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/ic_whatsapp"
                    app:layout_constraintStart_toEndOf="@id/callIcon"
                    app:layout_constraintTop_toBottomOf="@id/supervisorNumber"
                    app:tint="@color/green_farmx" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>

        <ImageView
            android:id="@+id/costIcon"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginTop="15dp"
            android:src="@drawable/ic_chart"
            app:layout_constraintStart_toStartOf="@id/climateCard"
            app:layout_constraintTop_toBottomOf="@id/supervisorCard"
            app:tint="@color/green_farmx" />

        <TextView
            android:id="@+id/costHead"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:text="Cost"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="@id/costIcon"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/costIcon"
            app:layout_constraintTop_toTopOf="@id/costIcon" />

        <androidx.cardview.widget.CardView
            android:id="@+id/costCard"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            app:layout_constraintEnd_toEndOf="@id/climateCard"
            app:layout_constraintStart_toStartOf="@id/climateCard"
            app:layout_constraintTop_toBottomOf="@id/costIcon">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="15dp">

                <ImageView
                    android:id="@+id/expenseIcon"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/ic_expense"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:tint="@color/green_farmx" />

                <TextView
                    android:id="@+id/expense"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:text="-$15,000"
                    android:textColor="@color/mat_black"
                    android:textSize="16sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/expenseIcon"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/expenseHead"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:text="Expense"
                    android:textSize="12sp"
                    app:layout_constraintEnd_toEndOf="@id/expense"
                    app:layout_constraintStart_toStartOf="@id/expense"
                    app:layout_constraintTop_toBottomOf="@id/expense" />

                <ImageView
                    android:id="@+id/incomeIcon"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/ic_income"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/expenseHead"
                    app:tint="@color/green_farmx" />

                <TextView
                    android:id="@+id/income"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:text="+$15,000"
                    android:textColor="@color/mat_black"
                    android:textSize="16sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/incomeIcon"
                    app:layout_constraintTop_toTopOf="@id/incomeIcon" />

                <TextView
                    android:id="@+id/incomeHead"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:text="Income"
                    android:textSize="12sp"
                    app:layout_constraintEnd_toEndOf="@id/income"
                    app:layout_constraintStart_toStartOf="@id/income"
                    app:layout_constraintTop_toBottomOf="@id/income" />

                <ImageView
                    android:id="@+id/profitIcon"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/ic_profit"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/incomeHead"
                    app:tint="@color/green_farmx" />

                <TextView
                    android:id="@+id/profit"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:text="+$15,000"
                    android:textColor="@color/mat_black"
                    android:textSize="16sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/profitIcon"
                    app:layout_constraintTop_toTopOf="@id/profitIcon" />

                <TextView
                    android:id="@+id/profitHead"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:text="Profit"
                    android:textSize="12sp"
                    app:layout_constraintEnd_toEndOf="@id/profit"
                    app:layout_constraintStart_toStartOf="@id/profit"
                    app:layout_constraintTop_toBottomOf="@id/profit" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>

        <ImageView
            android:id="@+id/mainCropIcon"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:padding="2dp"
            android:layout_marginTop="15dp"
            android:src="@drawable/activity_icon"
            app:layout_constraintStart_toStartOf="@id/climateCard"
            app:layout_constraintTop_toBottomOf="@id/costCard"
            app:tint="@color/green_farmx" />

        <TextView
            android:id="@+id/mainCropHead"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:text="Main Crops"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="@id/mainCropIcon"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/mainCropIcon"
            app:layout_constraintTop_toTopOf="@id/mainCropIcon" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/mainCropsRv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            tools:listitem="@layout/view_my_land_crop_icon"
            tools:itemCount="2"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            app:spanCount="1"
            app:layoutManager="com.google.android.flexbox.FlexboxLayoutManager"
            app:layout_constraintStart_toStartOf="@id/climateCard"
            app:layout_constraintEnd_toEndOf="@id/climateCard"
            app:layout_constraintTop_toBottomOf="@id/mainCropIcon"/>

        <ImageView
            android:id="@+id/interCropIcon"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:padding="2dp"
            android:layout_marginTop="15dp"
            android:src="@drawable/activity_icon"
            app:layout_constraintStart_toStartOf="@id/climateCard"
            app:layout_constraintTop_toBottomOf="@id/mainCropsRv"
            app:tint="@color/green_farmx" />

        <TextView
            android:id="@+id/interCropHead"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:text="Inter Crops"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="@id/interCropIcon"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/interCropIcon"
            app:layout_constraintTop_toTopOf="@id/interCropIcon" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/interCropsRv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            tools:itemCount="2"
            tools:listitem="@layout/view_my_land_crop_icon"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            app:spanCount="2"
            app:layoutManager="com.google.android.flexbox.FlexboxLayoutManager"
            app:layout_constraintStart_toStartOf="@id/climateCard"
            app:layout_constraintEnd_toEndOf="@id/climateCard"
            app:layout_constraintTop_toBottomOf="@id/interCropIcon"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="15dp"
            app:layout_constraintTop_toBottomOf="@id/interCropsRv"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>