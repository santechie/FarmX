<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    android:fitsSystemWindows="true"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/app_bar_layout"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:id="@+id/collapsing_toolbar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fitsSystemWindows="true"
            app:contentScrim="?attr/colorPrimary"
            app:layout_scrollFlags="scroll|exitUntilCollapsed">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="?actionBarSize"
                android:layout_alignParentBottom="true"
                android:layout_gravity="top"

                android:background="@color/actionbar_colour"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"

                app:layout_constraintTop_toTopOf="parent">

                <androidx.appcompat.widget.Toolbar
                    android:id="@+id/toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize"
                    android:background="@color/actionbar_colour"
                    android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
                    app:contentInsetStartWithNavigation="0dp"
                    app:layout_collapseMode="parallax"
                    app:popupTheme="@style/ThemeOverlay.AppCompat.Light">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:weightSum="1">

                        <LinearLayout
                            android:id="@+id/logo_layout"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight=".15"
                            android:gravity="center">

                            <ImageView
                                android:id="@+id/logo"
                                android:layout_width="wrap_content"
                                android:adjustViewBounds="true"
                                android:layout_height="30dp"
                                android:layout_marginEnd="2dp"
                                android:src="@drawable/farmx_logo" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight=".85">

                            <com.ascentya.AsgriV2.Utils.CustomAutoCompleteTextView
                                android:id="@+id/search_bar"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_margin="10dp"
                                android:layout_toEndOf="@+id/user_menu"
                                android:background="@drawable/backeditttext"
                                android:drawableStart="@drawable/ic_search_black_24dp"
                                android:drawableEnd="@drawable/scan"
                                android:drawablePadding="5dp"
                                android:fontFamily="@font/poppins_regular"
                                android:hint="@string/search_crop"
                                android:imeOptions="actionSearch"
                                android:inputType="textCapWords"
                                android:paddingStart="5dp"
                                android:paddingEnd="5dp"
                                android:textColor="@color/app_colour_green"
                                android:textColorHint="@color/app_colour_green"
                                android:textSize="@dimen/_12sdp" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/state_layout"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight=".09"
                            android:gravity="center|start"
                            android:visibility="gone">

                            <ImageView

                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:background="@drawable/world"
                                android:fontFamily="@font/poppins_regular"
                                android:gravity="center"
                                android:text="En"
                                android:textColor="@color/black"

                                android:textSize="@dimen/_10sdp" />
                        </LinearLayout>


                    </LinearLayout>


                </androidx.appcompat.widget.Toolbar>


            </LinearLayout>


        </com.google.android.material.appbar.CollapsingToolbarLayout>

    </com.google.android.material.appbar.AppBarLayout>


    <androidx.drawerlayout.widget.DrawerLayout
        android:id="@+id/drawerLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:elevation="7dp"
        android:scrollingCache="true"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/white">

                <FrameLayout
                    android:id="@+id/fragment_container"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="56dp"
                    android:background="@drawable/backround_trans"
                    android:text="Home" />

            </LinearLayout>


        </RelativeLayout>


    </androidx.drawerlayout.widget.DrawerLayout>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_gravity="bottom"
        android:background="@color/green_farmx"
        android:theme="@style/Widget.BottomNavigationView"
        app:itemIconSize="20dp"
        app:itemIconTint="@drawable/color_state_white_1"
        app:itemTextAppearanceActive="@style/BottomNavigationView.Active"
        app:itemTextAppearanceInactive="@style/BottomNavigationView"
        app:itemTextColor="@drawable/color_state_white_1"

        app:layout_constraintBottom_toBottomOf="parent"
        app:menu="@menu/menu_bottom_navigation_basic" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>

