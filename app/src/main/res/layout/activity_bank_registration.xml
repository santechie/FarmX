<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="25dp"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="25dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="15dp"
            android:text="Bank Registration"
            style="@style/RegistrationTitleTextStyle"/>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="0dp"
            android:layout_marginTop="20dp"
            android:text="Bank"
            style="@style/RegistrationHeadingTextStyle" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginStart="0dp"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="0dp"
            android:background="@drawable/edittext_farmxbackround"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:padding="3dp"
                android:layout_gravity="center"
                android:layout_marginStart="10dp"
                android:src="@drawable/bank_building"
                android:backgroundTint="@color/green_farmx" />

            <Spinner
                android:id="@+id/bank_name"
                style="@style/SpinnerTheme"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="5dp"
                android:paddingStart="5dp"
                android:paddingEnd="10dp"
                app:backgroundTint="@color/white" />


        </LinearLayout>



        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="0dp"
            android:layout_marginTop="20dp"
            android:text="Branch "
            style="@style/RegistrationHeadingTextStyle" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginStart="0dp"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="0dp"
            android:background="@drawable/edittext_farmxbackround"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:padding="5dp"
                android:layout_gravity="center"
                android:layout_marginStart="10dp"
                android:src="@drawable/bank_branch" />

            <Spinner
                android:id="@+id/branch"
                style="@style/SpinnerTheme"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="5dp"
                android:paddingStart="5dp"
                android:paddingEnd="10dp"
                app:backgroundTint="@color/white" />


        </LinearLayout>



        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="0dp"
            android:layout_marginTop="20dp"
            android:text="IFSC Code "
            style="@style/RegistrationHeadingTextStyle" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginStart="0dp"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="0dp"
            android:background="@drawable/edittext_farmxbackround"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:padding="3dp"
                android:layout_gravity="center"
                android:layout_marginStart="10dp"
                android:src="@drawable/bank_building"/>

            <EditText
                android:id="@+id/ifsc_code"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:textSize="15sp"
                android:layout_marginTop="2dp"
                android:background="@null"
                android:textAllCaps="true"
                android:hint="IFSC Code"
                android:imeOptions="actionNext"
                android:inputType="textCapCharacters"
                android:paddingStart="5dp"
                android:maxLines="1"
                android:maxLength="11"
                android:paddingEnd="10dp"/>


        </LinearLayout>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="0dp"
            android:layout_marginTop="20dp"
            android:text="User Id "
            style="@style/RegistrationHeadingTextStyle" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginStart="0dp"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="0dp"
            android:background="@drawable/edittext_farmxbackround"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:padding="3dp"
                android:layout_gravity="center"
                android:layout_marginStart="10dp"
                app:srcCompat="@drawable/ic_phone_android_black_24dp"
                app:tint="@color/green_farmx"/>

            <EditText
                android:id="@+id/email_phno"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:maxLength="10"
                android:maxLines="1"
                android:textSize="15sp"
                android:background="@null"
                android:hint="Phone number"
                android:imeOptions="actionNext"
                android:layout_marginTop="2dp"
                android:inputType="phone"
                android:paddingStart="5dp"
                android:paddingEnd="10dp"/>


        </LinearLayout>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="0dp"
            android:layout_marginTop="20dp"
            android:text="Password "
            style="@style/RegistrationHeadingTextStyle" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginStart="0dp"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="0dp"
            android:background="@drawable/edittext_farmxbackround"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:padding="3dp"
                android:layout_gravity="center"
                android:layout_marginStart="10dp"
                app:srcCompat="@drawable/ic_baseline_lock_24"
                app:tint="@color/green_farmx" />

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:passwordToggleEnabled="true"
                app:hintEnabled="false">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Password"
                    android:paddingTop="0dp"
                    android:paddingEnd="50dp"
                    android:minHeight="0dp"
                    android:background="@null"
                    android:imeOptions="actionNext"
                    android:inputType="textPassword"
                    android:paddingStart="5dp"
                    android:maxLength="25"
                    android:textSize="15sp"
                    android:maxLines="1"
                    app:backgroundTint="@color/white" />

            </com.google.android.material.textfield.TextInputLayout>

        </LinearLayout>



        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Name "
            style="@style/RegistrationHeadingTextStyle" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@drawable/edittext_farmxbackround"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:padding="3dp"
                android:layout_gravity="center"
                android:layout_marginStart="10dp"
                android:src="@drawable/profile"/>

            <EditText
                android:id="@+id/name"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:textSize="15sp"
                android:layout_marginTop="2dp"
                android:background="@null"
                android:imeOptions="actionNext"
                android:hint="Name"
                android:maxLength="50"
                android:maxLines="1"
                android:inputType="textPersonName"
                android:paddingStart="5dp"
                android:paddingEnd="10dp"
                app:backgroundTint="@color/white" />


        </LinearLayout>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="0dp"
            android:layout_marginTop="20dp"
            android:text="Designation "
            style="@style/RegistrationHeadingTextStyle" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginStart="0dp"
            android:background="@drawable/edittext_farmxbackround"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:padding="4dp"
                android:layout_gravity="center"
                android:layout_marginStart="10dp"
                android:src="@drawable/designation" />

            <EditText
                android:id="@+id/designation"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:textSize="15sp"
                android:background="@null"
                android:imeOptions="actionDone"
                android:inputType="text"
                android:hint="Designation"
                android:layout_marginTop="2dp"
                android:paddingStart="5dp"
                android:paddingEnd="10dp"
                android:maxLength="50"
                android:maxLines="1"
                app:backgroundTint="@color/white" />


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content"
            android:gravity="center">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/register"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="25dp"
                android:layout_marginTop="25dp"
                android:layout_marginEnd="25dp"
                android:layout_marginBottom="15dp"
                android:background="@drawable/farmxgreen_button"
                android:text="Submit"
                android:textColor="@color/white" />


        </LinearLayout>


    </LinearLayout>


</androidx.core.widget.NestedScrollView>
