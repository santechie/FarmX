<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:elevation="5dp"
    app:cardCornerRadius="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="8dp">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:weightSum="1"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/field_title"
                    android:layout_width="0dp"
                    android:layout_weight=".6"
                    android:layout_height="match_parent"
                    android:ellipsize="end"
                    android:layout_margin="3dp"
                    android:maxLines="1"
                    android:gravity="center|start"

                    android:text="TITLE"
                    android:textColor="@color/subheadlines_colour"
                    android:textSize="@dimen/title"
                    android:fontFamily="@font/poppins_semibold" />

                <TextView
                    android:id="@+id/date_time"
                    android:layout_width="0dp"
android:layout_weight=".4"
                    android:layout_margin="3dp"
                    android:layout_height="match_parent"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:gravity="center|start"

                    android:text="TITLE"
                    android:textColor="@color/subheadlines_colour"

                    />




            </LinearLayout>
            <TextView
                android:id="@+id/field_dimon"
                android:layout_width="match_parent"
                android:layout_weight=".7"

                android:layout_margin="3dp"
                android:layout_height="match_parent"
                android:ellipsize="end"
                android:maxLines="1"
                android:gravity="center|start"

                android:text="TITLE"
                android:textColor="@color/subheadlines_colour"
                android:textSize="@dimen/title"
                />





            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight=".3">

                <com.skydoves.elasticviews.ElasticFloatingActionButton
                    android:id="@+id/edit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/app_colour_green"
                    android:backgroundTint="@color/green_farmx"
                    android:src="@drawable/ic_baseline_edit_24"
                    android:text="@string/description"
                    android:textAllCaps="false"
                    app:fabSize="mini"
                    android:visibility="gone"
                    android:fontFamily="@font/poppins_semibold"
                    android:tint="@color/white" />

                <com.skydoves.elasticviews.ElasticFloatingActionButton
                    android:id="@+id/delete"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:backgroundTint="@color/green_farmx"
                    android:fontFamily="@font/poppins_regular"
                    android:src="@drawable/ic_baseline_delete_sweep_24"
                    android:text="@string/Videos"
                    app:fabSize="mini"
                    android:textColor="@color/white"
                    android:tint="@color/white"


                    />

            </LinearLayout>

        </LinearLayout>


    </LinearLayout>


</androidx.cardview.widget.CardView>