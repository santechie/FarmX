<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"


    tools:context=".Activitys.Crop_Checker">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            android:layout_alignParentBottom="true"
            android:layout_gravity="top"

            android:background="@color/actionbar_colour"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"

            app:layout_constraintTop_toTopOf="parent">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="@color/actionbar_colour"
                android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
                app:contentInsetStartWithNavigation="0dp"
                app:layout_collapseMode="parallax"
                app:popupTheme="@style/ThemeOverlay.AppCompat.Light">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:weightSum="1">

                    <LinearLayout
                        android:id="@+id/logo_layout"
                        android:layout_width="0dp"
                        android:layout_margin="1dp"
                        android:layout_height="match_parent"
                        android:layout_weight=".08"
                        android:gravity="center">

                        <ImageView
                            android:id="@+id/logo"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_marginEnd="5dp"
                            android:background="@drawable/farmx_logo" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:gravity="center"
                        android:layout_height="match_parent"
                        android:layout_weight=".92">

                        <com.ascentya.AsgriV2.Utils.CustomAutoCompleteTextView
                            android:id="@+id/search_name"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_marginStart="10dp"
                            android:overlapAnchor="false"
                            android:layout_marginEnd="10dp"
                            android:background="@drawable/backeditttext"
                            android:drawableStart="@drawable/ic_search_black_24dp"
                            android:drawablePadding="10dp"
                            android:hint="@string/search_crop"
                            android:imeOptions="actionNext"
                            android:inputType="text"
                            android:paddingStart="10dp"
                            android:paddingEnd="10dp"
                            android:textColor="@color/colorPrimaryDark"
                            android:textColorHint="@color/colorPrimaryDark"

                            />

                    </LinearLayout>




                </LinearLayout>


            </androidx.appcompat.widget.Toolbar>


        </LinearLayout>



        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/cropessentials_recycler"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layoutAnimation="@anim/layout_animation_fall_down" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:id="@+id/fav_title"
            android:visibility="gone"
            android:text="@string/favourite_crops"
            android:textColor="@color/black"
            android:textSize="@dimen/title"
            android:fontFamily="@font/poppins_semibold" />


        <TextView
            android:id="@+id/nocrops"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="25dp"
            android:text="@string/no_crops_found"
            android:textSize="18sp"
            android:fontFamily="@font/poppins_semibold"
            android:visibility="gone" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/crop_suggestion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>


</androidx.core.widget.NestedScrollView>