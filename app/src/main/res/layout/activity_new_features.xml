<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".beta.NewFeaturesActivity">

    <com.google.android.material.button.MaterialButton
        android:id="@+id/landMap"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_margin="20dp"
        app:cornerRadius="20dp"
        app:backgroundTint="@color/green_farmx"
        android:text="Land Map"
        style="@style/Widget.MaterialComponents.Button"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/iotRequest"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/landMap"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="20dp"
        app:cornerRadius="20dp"
        app:backgroundTint="@color/green_farmx"
        android:text="IoT Request"
        style="@style/Widget.MaterialComponents.Button"/>

    <TextView
        android:id="@+id/title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="@id/iotRequest"
        app:layout_constraintEnd_toEndOf="@id/iotRequest"
        app:layout_constraintTop_toBottomOf="@id/iotRequest"
        android:text="Add Manager"
        android:textColor="@color/mat_black"
        android:textSize="18sp"/>

    <EditText
        android:id="@+id/name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/title"
        app:layout_constraintEnd_toEndOf="@id/title"
        app:layout_constraintTop_toBottomOf="@id/title"
        android:maxLines="1"
        android:maxLength="50"
        android:hint="Name"/>

    <EditText
        android:id="@+id/mobileNumber"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/title"
        app:layout_constraintEnd_toEndOf="@id/title"
        app:layout_constraintTop_toBottomOf="@id/name"
        android:inputType="phone"
        android:maxLines="1"
        android:maxLength="10"
        android:hint="Mobile Number"/>

    <EditText
        android:id="@+id/email"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/title"
        app:layout_constraintEnd_toEndOf="@id/title"
        app:layout_constraintTop_toBottomOf="@id/mobileNumber"
        android:inputType="textEmailAddress"
        android:maxLines="1"
        android:hint="Email ID"/>

    <EditText
        android:id="@+id/password"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/title"
        app:layout_constraintEnd_toEndOf="@id/title"
        app:layout_constraintTop_toBottomOf="@id/email"
        android:inputType="textEmailAddress"
        android:maxLines="1"
        android:hint="Password"/>

    <EditText
        android:id="@+id/confirmPassword"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/title"
        app:layout_constraintEnd_toEndOf="@id/title"
        app:layout_constraintTop_toBottomOf="@id/password"
        android:inputType="textEmailAddress"
        android:maxLines="1"
        android:hint="Confirm Password"/>

</androidx.constraintlayout.widget.ConstraintLayout>