<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:background="@color/white"
        android:elevation="5dp"
        android:outlineAmbientShadowColor="@color/app_colour_green"
        android:outlineSpotShadowColor="@color/app_colour_green"
        android:padding="2dp"
        android:weightSum="1"
        app:cardCornerRadius="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height=".6dp"
                android:background="@color/green_farmx" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/overlay_light_90"
                android:gravity="center|start"

                android:orientation="horizontal"
                android:padding="2dp">

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight=".15"
                    android:gravity="center|start">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/essential"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:src="@color/white" />


                    <ImageView
                        android:id="@+id/icon"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true" />

                </RelativeLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_weight=".70"
                    android:gravity="center|start"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/title"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="2dp"

                            android:maxLines="1"
                            android:textColor="@color/application_letters"
                            android:textSize="@dimen/disc"
                            android:fontFamily="@font/poppins_semibold" />

<LinearLayout
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:gravity="center|start"
    android:id="@+id/npk_layout"
    android:layout_height="wrap_content">

    <TextView
        android:layout_width="wrap_content"
        android:text="NPK : "
        android:layout_margin="2dp"

        android:maxLines="1"
        android:textColor="@color/application_letters"
        android:textSize="@dimen/disc"
        android:fontFamily="@font/poppins_semibold"
        android:layout_height="wrap_content"/>

    <EditText
        android:id="@+id/npk"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"

        android:hint="Npk Value"
        android:inputType="number"
        android:maxLines="1"
        android:textColor="@color/application_letters"
        android:textSize="@dimen/disc"
        android:fontFamily="@font/poppins_semibold"
         />


</LinearLayout>



                    </LinearLayout>


                    <TextView
                        android:id="@+id/value"
                        android:layout_width="match_parent"

                        android:layout_height="wrap_content"
                        android:layout_margin="2dp"

                        android:textColor="@color/application_letters"
                        android:textSize="@dimen/disc" />


                </LinearLayout>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight=".15"
                    android:gravity="center">


                    <ImageView
                        android:id="@+id/status"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:visibility="visible"
                        app:fabSize="mini" />

                </RelativeLayout>


            </LinearLayout>

        </LinearLayout>


    </androidx.cardview.widget.CardView>
</LinearLayout>